.container
  = render 'title', title: t('.title', repo_name: @repo.title)

  %hr

  #benchmark-types-form-container
    .text-center
      = render 'form',
          form_path: commits_path(organization_name: @organization.name, repo_name: @repo.name),
          name: 'commits'

  #charts-container
    = render 'layouts/spinner'

    #chart-container.chart-container
      - if @comparing_benchmark.present?
        = render 'comparison_chart', charts: @charts, benchmark_types: [@benchmark, @comparing_benchmark]
      - else
        = render 'commits_chart', charts: @charts, benchmark: @benchmark

  = render 'chart_modal'
